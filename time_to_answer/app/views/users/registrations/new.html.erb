<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Cadastar-se</h1>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
          </div>

          <div>
            <%= f.password_field :password, placeholder: "Senha", class: "form-control" %>
          </div>

          <div>
            <%= f.password_field :password, placeholder: "ConfirmaÃ§Ã£o da senha", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field text-left mt-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div>
            <%= f.submit "Cadastrar", class: "btn btn-default submit", style: "float: none; margin-left: 0px; width: 50%;"%>
          </div>


          <div class="clearfix"></div>
          <div class="separator"></div>
        <% end %>
        <%= render "users/shared/links" %>
      </section>
    </div>
  </div>
</div>
